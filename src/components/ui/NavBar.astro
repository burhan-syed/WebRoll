---
import Dice from "../../components/ui/icons/Dice";
const { noButtons } = Astro.props;
---

<script>
  let swap = document.getElementById("swap-checkbox") as HTMLInputElement;
  let element = document.getElementById("swap-element") as HTMLLabelElement;
  element.onclick = (e) => {
    swap.checked = !swap.checked;
  };
</script>

<nav
  class="navbar bg-base-100 h-20 border-b border-b-base-300 bg-opacity-80 backdrop-blur shadow-sm"
>
  <div class="navbar-start">
    {
      !noButtons && (
        <label
          id="swap-element"
          for="my-drawer"
          class="btn btn-ghost drawer-button swap swap-rotate w-16"
        >
          <input id="swap-checkbox" type="checkbox" />

          <svg
            class="swap-off fill-current"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h7"
            />
          </svg>
          <svg
            class="swap-on fill-current mx-auto"
            xmlns="http://www.w3.org/2000/svg"
            width="28"
            height="28"
            viewBox="0 0 512 512"
          >
            <polygon points="400 145.49 366.51 112 256 222.51 145.49 112 112 145.49 222.51 256 112 366.51 145.49 400 256 289.49 366.51 400 400 366.51 289.49 256 400 145.49" />
          </svg>
        </label>
      )
    }
  </div>
  <div class="navbar-center">
    <a rel="preload" href="/" class="btn btn-ghost normal-case text-xl"
      >WebRoll</a
    >
  </div>
  <div class="navbar-end">
    {
      !noButtons && (
        <a
          rel="prefetch"
          href="/explore"
          class="btn btn-ghost w-16"
          aria-label="explore page"
        >
          <Dice strokeWidth={13} size={24} />
        </a>
      )
    }
  </div>
</nav>
