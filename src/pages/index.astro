---

<style>
  .font-title {
    font-size: 4.5rem;
    line-height: 1;
  }
  .shadow-text {
    text-shadow: 0px 0px 0px hsl(var(--nc) / 0.5);
  }
</style>

<MainLayout noProse={true} noFooter={false} skipCookies={false}>
  <div class="bg-dotted-light bg-base-100 flex flex-col">
    <div
      class="from-primary/90 via-primary/50 to-primary/30 brightness-110 text-base-100 grid place-items-center items-center bg-gradient-to-b sm:bg-gradient-to-br min-h-screen -mt-20 pt-20"
    >
      <div
        class="hero-content col-start-1 row-start-1 w-full max-w-7xl flex-col justify-between gap-10 lg:flex-row md:pb-40 lg:items-end lg:gap-0 xl:gap-20"
      >
        <div class="lg:pl-10 lg:pb-32">
          <div
            class="py-2 lg:py-10 text-center  lg:text-left flex flex-col gap-10 md:gap-6"
          >
            <h1
              class="mb-2 font-extrabold text-4xl sm:text-5xl md:text-7xl shadow-text"
            >
              <span class="">Rediscover the Web</span>
            </h1>
            <p>
              <span class="text-base sm:text-xl font-normal"
                >WebRoll is curating beautiful, unique, and interesting sites from across
                the internet</span
              >
            </p>
          </div>
          <p class="py-4 w-full text-center sm:text-left">Roll the dice & see where you land.</p>

          <div
            class="flex flex-col lg:flex-row flex-1 justify-center gap-10 sm:gap-4 lg:justify-start"
          >
            <a
              rel="preload"
              href="/explore"
              class="btn btn-primary btn-active btn-md md:btn-lg normal-case hover:scale-105 hover:md:scale-110 transition-transform gap-2 group"
            >
              <span
                class="group-hover:rotate-180 transition-transform ease-out duration-300"
                ><Dice strokeWidth={20} />
              </span>
              <span class="inline">Start Rolling</span>
            </a>
            <a
              rel="preload"
              href="/submit"
              class="btn btn-ghost lg:btn-lg normal-case hidden sm:flex">Submit a Site</a
            >
          </div>
        </div>
      </div>
      <svg
        width="1600"
        height="595"
        xmlns="http://www.w3.org/2000/svg"
        class="col-start-1 row-start-1 h-auto w-full mt-auto"
        viewBox="0 0 1600 595"
        ><defs
          ><linearGradient id="a" gradientTransform="rotate(90)"
            ><stop
              offset="1%"
              style={{ stopColor: "hsl(var(--b2))" }}
              stop-color=""></stop><stop
              offset="99%"
              style={{ stopColor: "hsl(var(--sf))" }}></stop>
          </linearGradient><linearGradient id="b" gradientTransform="rotate(90)"
            ><stop offset="1%" style={{ stopColor: "hsl(var(--b2))" }}
            ></stop><stop offset="99%" style={{ stopColor: "hsl(var(--b1))" }}
            ></stop>
          </linearGradient>
        </defs><path fill="none" d="M0 0h1600v595H0z"></path><path
          d="M0 198c98.721 33.372 197.443 66.744 287 48 89.557-18.744 169.95-89.603 250-100 80.05-10.397 159.756 39.667 253 70s200.027 40.936 288 25c87.973-15.936 157.135-58.41 241-70 83.865-11.59 182.432 7.705 321 27l-40 397H0Z"
          class="transition-transform -translate-y-36 sm:-translate-y-20 md:translate-y-10"
          style={{ fill:  "hsl(var(--b1) / 0.3)" }}></path><path
          d="M0 396c88.173 2.303 176.345 4.605 253-6s141.791-34.118 244-20c102.209 14.118 241.489 65.867 338 78 96.511 12.133 150.253-15.349 228-38 77.747-22.651 179.5-40.472 273-42 93.5-1.528 178.75 13.236 304 28l-40 199H0Z"
          style={{ fill: "hsl(var(--b1))" }}></path>
      </svg>
    </div>
    <!-- <div class="grid bg-base-100">content</div> -->
  </div>
</MainLayout>
