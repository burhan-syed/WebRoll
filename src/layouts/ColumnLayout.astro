---
const {justification = "justify-start", grow=false} = Astro.props; 
---

<div
    class={"flex flex-col flex-grow bg-neutral items-center justify-center " }
    style={{
      backgroundImage: `radial-gradient(circle, hsl(var(--sc)) 1px, rgba(0, 0, 0, 0) 1px)`,
      backgroundSize: `5px 5px`,
    }}
  >
    <div
      class={"flex flex-col gap-2 min-w-full sm:min-w-fit sm:w-full sm:max-w-xl md:max-w-2xl lg:max-w-4xl mx-2 p-4  border-4 border-red-500" + (grow ? " flex-grow " : "")}
    >
     <slot/>
    </div>
  </div>