// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

enum SiteStatus {
  REVIEW
  APPROVED
  QUARANTINE
  BANNED
}

model Site {
  id          Int        @id @unique @map("id") @default(autoincrement())
  name        String     @db.VarChar(24)
  url         String     @unique
  sourceLink  String?    @map("source_link")
  views       Int        @default(0)
  dislikes    Int        @default(0)
  reports     Int        @default(0)
  description String?
  privacy     Boolean    @default(false)
  adult       Boolean    @default(false)
  status      SiteStatus @default(REVIEW)
  submitterIP String     @map("submitter_ip") @db.VarChar(45)
  submittedAt DateTime   @default(now()) @map("submitted_at")

  tags       Tags[]
  categories Categories[]
  likes      Likes[]
  Reports    Reports[]
}

model Likes {
  id        Int      @id @unique @default(autoincrement())
  siteId    Int      @map("site_id")
  ip        String   @db.VarChar(45)
  date      DateTime @default(now())
  direction Boolean  @default(true)

  site Site @relation(fields: [siteId], references: [id])

  @@unique([siteId, ip])
}

model Reports {
  id     Int      @id @unique @default(autoincrement())
  siteId Int      @map("site_id")
  ip     String   @db.VarChar(45)
  date   DateTime @default(now())

  site Site @relation(fields: [siteId], references: [id])
  @@unique([siteId, ip])
}

model Tags {
  id  Int    @id @unique @map("id") @default(autoincrement())
  tag String @db.VarChar(24) @unique

  createdAt DateTime @default(now()) @map("created_at")

  sites Site[]
}

model Categories {
  id        Int      @id @unique @map("id") @default(autoincrement())
  category  String   @db.VarChar(24) @unique
  createdAt DateTime @default(now()) @map("created_at")

  description String?
  sites       Site[]
}
